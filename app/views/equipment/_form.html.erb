<%= form_for @equipment do |f| %>
  <% if @equipment.errors.any? %>
    <h2><%= pluralize(@equipment.errors.count, "error") %> prohibited the equipment from being added</h2>
    <ul>
      <%= @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group row">
    <%= f.label :tag, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tag, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :equipment_type, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :equipment_type, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :scope, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :scope, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :supplier, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :supplier, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :manufacturer, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :manufacturer, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :model_number, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :model_number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :zeton_po, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zeton_po, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :tracking_number, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tracking_number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :receiving_info, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :receiving_info, class: 'form-control' %>
    </div>
  </div>
  <%= f.submit @equipment.new_record? ? 'Add Equipment' : 'Update Equipment', class: 'btn btn-outline-primary' %>
<% end %>
