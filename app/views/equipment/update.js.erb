<% @equipment.attributes.each do |name, value| %>
  <% if @equipment.metrics_attributes.include?(name) %>
    $("#<%= name %>_status_equipment_<%= @equipment.id %>").html(
      "<%=
        j render partial: 'shared/metric_status',
          locals: {
          record: @equipment,
          attribute: name,
          value: value
        }
      %>");
  <% end %>
<% end %>
