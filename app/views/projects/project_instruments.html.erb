<div class="main">
  <h3>
    Instrument List<br />
  </h3>
    <p class="text-muted"><%= link_to 'View Metrics', project_instruments_metrics_path %></p>
  <div class="table-responsive">
    <%= will_paginate(@instruments, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    <table class="mt-3 table table-hover">
      <thead>
        <tr>
          <th scope="col" class="border-top-0 align-middle text-center"></th>
          <th scope="col" class="border-top-0 align-middle text-center">Tag</th>
          <th scope="col" class="border-top-0 align-middle text-center">P&ID</th>
          <th scope="col" class="border-top-0 align-middle text-center">Scope</th>
          <th scope="col" class="border-top-0 align-middle text-center">M,E,M/E</th>
          <th scope="col" class="border-top-0 align-middle text-center">Manufacturer</th>
          <th scope="col" class="border-top-0 align-middle text-center">Model Number</th>
          <th scope="col" class="border-top-0 align-middle text-center">Process Connection</th>
          <th scope="col" class="border-top-0 align-middle text-center">MOC</th>
          <th scope="col" class="border-top-0 align-middle text-center">Range</th>
        </tr>
      </thead>
      <tbody>
        <% @instruments.each do |inst| %>
          <%= render partial: "instruments", locals: {instrument: inst} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Add New Instrument', new_instrument_path(:project => @project), class: 'btn btn-outline-primary btn-block', id: 'new_instrument_link' %>
</div>
