<div class="row pl-5 pr-5 mb-3 mt-5">
  <div class="col-sm-12">
    <h3>
      Requests for Information
    </h3>
    <button onclick="toggleFilters()" class="btn btn-sm btn-primary">
      Filters
    </button>
  </div>
</div>

<div class="row pl-5 pr-5">
  <div id="filters" class="col-sm-2 filters-close">
    <h5 class="text-muted">
      Sort by
    </h5>
    <div class="dropdown">
      <button class="btn btn-sm btn-outline-primary dropdown-toggle"
              type="button"
              id="loop_dropdown_button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false">
        Select...
      </button>
      <div class="dropdown-menu"
           style="height: 200px;
           overflow: scroll;"
           aria-labelledby="loop_dropdown_button">
        <%=
          link_to 'Target Date',
            request.query_parameters.merge(
              :sorted_by => 'target_date_' + sort_direction(@sorted_by)
            ),
            class: 'dropdown-item'
        %>
        <%=
          link_to 'Status',
            request.query_parameters.merge(
              :sorted_by => 'answered_' + sort_direction(@sorted_by)
            ),
            class: 'dropdown-item'
        %>
        <%=
          link_to 'Date Added',
            request.query_parameters.merge(
              :sorted_by => 'date_created_' + sort_direction(@sorted_by)
          ),
          class: 'dropdown-item'
        %>
      </div>
    </div>
    <h5 class="text-muted mt-3">
      Filters
    </h5>
    <div class="row">
      <div class="col-12">
        <%=
          link_to 'Clear all',
            project_rfis_path,
            class: 'btn btn-outline-primary btn-sm'
        %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="dropdown mt-2">
          <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                  type="button"
                  id="type_code_dropdown_button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false">
            Status
            <% if params[:with_status].present? %>
              <i class="fa fa-filter"></i>
            <% end %>
          </button>
          <div class="dropdown-menu"
               style="height: 200px; overflow: scroll;"
               aria-labelledby="type_code_dropdown_button">
            <%= link_to "Show All",
              project_rfis_path,
              class: 'dropdown-item' %>
            <%= link_to "Open",
                         project_rfis_path(:with_status => 0),
                         class: "dropdown-item" %>
                       <%= link_to "Closed",
                         project_rfis_path(:with_status => 1),
                         class: "dropdown-item" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="dropdown mt-2">
          <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                  type="button"
                  id="area_dropdown_button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false">
            Work Area
            <% if params[:with_area].present? %>
              <i class="fa fa-filter"></i>
            <% end %>
          </button>
          <div class="dropdown-menu"
               style="height: 200px; overflow: scroll;"
               aria-labelledby="area_dropdown_button">
            <%= link_to "Show All",
              project_rfis_path,
              class: 'dropdown-item' %>
            <% @work_areas.each do |area| %>
              <%= link_to area,
                project_rfis_path(:with_area => area),
                class: 'dropdown-item' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm">
    <div class="row">
      <div class="col-sm-3">
        <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
          <div class="col-sm-12 h3 text-info">
            <i class="fa fa-hashtag text-centered"></i>
          </div>
          <div class="col-sm-12">
            <h2>
              <%= @rfis.count %>
            </h2>
          </div>
          <div class="col-sm-12 text-muted">
            RFI Count
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
          <div class="col-sm-12 h3 text-warning">
            <i class="fa fa-exclamation text-centered"></i>
          </div>
          <div class="col-sm-12">
            <h2>
              <%= @open_rfis.count %>
            </h2>
          </div>
          <div class="col-sm-12 text-muted">
            Open RFIs
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
          <div class="col-sm-12 h3 text-success">
            <i class="fa fa-calendar-plus-o text-centered"></i>
          </div>
          <div class="col-sm-12">
            <h2>
              <%= @open_rfis.count %>
            </h2>
          </div>
          <div class="col-sm-12 text-muted">
            New RFIs This Week
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
          <div class="col-sm-12 h1 text-primary">
            <%= link_to '<i class="fa fa-plus text-centered"></i>'.html_safe,
              new_information_request_path,
              id: 'new_rfi' %>
          </div>
        </div>
      </div>
    </div>



    <div class="row">
      <div class="col-12">
        <div class="card card-box-shadow mb-5">
          <div class="card-body mt-0">
            <% @rfis.each do |rfi| %>
              <%= render partial: 'rfi', locals: {rfi: rfi} %>
            <% end %>
            <div class="pt-3">
              <%= will_paginate(
                @rfis,
                :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer
              ) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
