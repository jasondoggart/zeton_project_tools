<div class="dark-header">
  <div class="row pl-5 pr-5">
    <div class="col-sm-12">
      <h1>
        Action Items
      </h1>
      <h5>
        <%=
          link_to 'Add new',
            new_action_item_path,
            id: 'new_action_item_link'
        %>
      </h5>
      <i class="filter-button fa fa-filter" onClick="toggleFilters()"></i>
    </div>
  </div>
</div>

<div class="row pl-5 pr-5 neg-mar">
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-info">
        <i class="fa fa-hashtag text-centered"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= @action_items.count %>
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        Action Items
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-warning">
        <i class="fa fa-exclamation text-centered"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= @open_action_items.count %>
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        Open Action Items
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-success">
        <i class="fa fa-calendar-plus-o text-centered"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= @action_items.count %>
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        New Action Items This Week
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h1 text-primary">
        <%= link_to '<i class="fa fa-plus text-centered"></i>'.html_safe,
          new_action_item_path,
          id: 'new_action_item' %>
      </div>
    </div>
  </div>
</div>

<div class="row pl-5 pr-5 filters-close" id="filters">
  <div class="col-sm-12">
    <div class="card card-box-shadow mb-3">
      <div class="card-body mt-0">
        <div class="dropdown mt-3 mb-3">
          <button class="btn btn-outline-primary dropdown-toggle"
                  type="button"
                  id="loop_dropdown_button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false">
            Sort By
          </button>
          <div class="dropdown-menu"
               style="height: 200px;
               overflow: scroll;"
               aria-labelledby="loop_dropdown_button">
            <%= link_to 'Target Date',
              request.query_parameters.merge(
                :sorted_by => 'target_date_' + sort_direction(@sorted_by)
              ),
              class: 'dropdown-item' %>
            <%= link_to 'Status',
              request.query_parameters.merge(
                :sorted_by => 'status_' + sort_direction(@sorted_by)
              ),
              class: 'dropdown-item' %>
            <%= link_to 'Date Added',
              request.query_parameters.merge(
                :sorted_by => 'date_created_' + sort_direction(@sorted_by)
              ),
              class: 'dropdown-item' %>
          </div>
        </div>
        <a class="btn btn-outline-primary"
           data-toggle="collapse"
           href="#collapseExample"
           role="button"
           aria-expanded="false"
           aria-controls="collapseExample">
          Filters<span class="ml-3"><i class="fa fa-caret-down"></i></span>
        </a>
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <div class="row">
              <div class="col-4">
                <%= link_to 'Clear all',
                  project_action_items_path,
                  class: 'btn btn-outline-primary btn-sm' %>
              </div>
              <div class="col-4">
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                          type="button"
                          id="status_dropdown_button"
                          data-toggle="dropdown"
                          aria-haspopup="true"
                          aria-expanded="false">
                    Status
                    <% if params[:with_status].present? %>
                      <i class="fa fa-filter"></i>
                    <% end %>
                  </button>
                  <div class="dropdown-menu"
                       style="height: 200px; overflow: scroll;"
                       aria-labelledby="status_dropdown_button">
                       <%= link_to "Show All",
                         project_action_items_path,
                         class: 'dropdown-item' %>
                       <%= link_to "Open",
                         project_action_items_path(:with_status => 0),
                         class: "dropdown-item" %>
                       <%= link_to "Closed",
                         project_action_items_path(:with_status => 1),
                         class: "dropdown-item" %>
                  </div>
                </div>
              </div>
              <div class="col-4">
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                          type="button"
                          id="area_dropdown_button"
                          data-toggle="dropdown"
                          aria-haspopup="true"
                          aria-expanded="false">
                    Work Area
                    <% if params[:with_area].present? %>
                      <i class="fa fa-filter"></i>
                    <% end %>
                  </button>
                  <div class="dropdown-menu"
                       style="height: 200px; overflow: scroll;"
                       aria-labelledby="area_dropdown_button">
                    <%= link_to "Show All",
                      project_action_items_path,
                      class: 'dropdown-item' %>
                    <% @work_areas.each do |area| %>
                      <%= link_to area,
                        project_action_items_path(:with_area => area),
                        class: 'dropdown-item' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row pl-5 pr-5">
  <div class="col-sm-12">
    <div class="card card-box-shadow mb-5">
      <div class="card-body mt-0">
        <% @action_items.each do |action_item| %>
          <div class="border-bottom pt-3 mt-2 pl-3 pr-3 pb-4">
            <div class="row mb-1">
              <div class="col-sm-12">
                <h5 class="mb-0">
                  <%= link_to action_item.ai_number + " - " + action_item.title,
                    action_item_path(action_item),
                    id: "show_action_item_#{action_item.id}" %>
                </h5>
              </div>
            </div>
            <div class="row mt-0 pt-0 pb-1">
              <div class="col-sm-3">
                <div id="action_item_status_form_action_item_<%= action_item.id %>">
                  <%= render partial: 'action_items/action_item_status_form',
                    locals: {action_item: action_item} %>
                </div>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-sm-12">
                <b>Target Date:</b>
                <% if action_item.target_date.present? %>
                  <%= action_item.target_date.strftime("%b %-d, %Y") %>
                <% else %>
                  No date entered
                <% end %>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-sm-12">
                <b>Assigned To:</b>
                <% if action_item.assigned_to.present? %>
                  <%= action_item.assigned_to.full_name %>
                <% else %>
                  No one assigned
                <% end %>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-sm-12">
                <b>Area</b>
                <% if action_item.area.present? %>
                  <%= action_item.area %>
                <% else %>
                  No one assigned
                <% end %>
              </div>
            </div>
            <div class="row mb-1">
              <div class="col-sm-12">
                <% action_item.instruments.each do |inst| %>
                  <%= link_to inst.tag,
                    instrument_path(inst),
                    class: 'badge badge-pill badge-primary' %>
                <% end %>
                <% action_item.equipment.each do |equip| %>
                  <span >
                    <%= link_to equip.tag,
                      equipment_path(equip),
                      class: 'badge badge-pill badge-primary' %>
                  </span>
                <% end %>
                <% action_item.handvalves.each do |valve| %>
                  <span >
                    <%= link_to valve.tag,
                      handvalve_path(valve),
                      class: 'badge badge-pill badge-primary' %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <div class="row pl-3 pr-3 mt-5">
          <%= will_paginate(
            @action_items,
            :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer
          ) %>
        </div>
      </div>
    </div>
  </div>
</div>

