<div class="row mb-3">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body pt-1 pb-0">
        <div class="row">
          <div class="col-12 col-md-6">
            <h3 class="card-title">
              <span class="p-2 mt-2">
                <%= link_to handvalve.tag, handvalve_path(handvalve), id: "show_handvalve_#{handvalve.id}" %>
              </span>
            </h3>
          </div>
          <div class="col-12 col-md-6">
            <span class="float-md-right">
              <a data-toggle="collapse" href="#handvalve_<%= handvalve.id %>_details" role="button" aria-expanded="false" aria-controls="handvalve_<%= handvalve.id %>_details" class="btn btn-outline-primary">
                Details
                <i class="fa fa-caret-down"></i>
              </a>
              <a data-toggle="collapse" href="#handvalve_<%= handvalve.id %>_metrics" role="button" aria-expanded="false" aria-controls="handvalve_<%= handvalve.id %>_metrics" class="btn btn-outline-primary">
                Metrics
                <i class="fa fa-caret-down"></i>
              </a>
            </span>
          </div>
        </div>

        <div class="mt-3 row collapse" id="handvalve_<%= handvalve.id %>_details">
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Skid Number:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.zeton_skid_number %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Skid Level:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.zeton_skid_level %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Valve Code:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.valve_code %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Valve Type:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.valve_type %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Size:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.size %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Line/Equipment Tag:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.line_number %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Scope:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.scope %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Supplier:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.supplier %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Manufacturer:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.manufacturer %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Model Number:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.model %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Process Connection:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.process_connection %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>MOC:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.material_of_construction %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Valve Code:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.valve_counting_code %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Installation Location:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.valve_location %></span>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                <span>Zeton PO:</span>
              </div>
              <div class="col-lg-10 col-md-9 col-sm-8 col-6">
                <span>Skid <%= handvalve.zeton_po %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

