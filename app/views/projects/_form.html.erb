<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %> prohibited this RFI from being created</h2>
    <ul>
      <% @project.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group row">
    <%= f.label :project_number, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :project_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :project_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :project_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :client, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :client, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :user_id, "Project manager", class: 'col-sm-2 col-form-label', id: 'project_user' %>
    <div class="col-sm-10">
      <%= f.collection_select :user_id, @users, :id, :email, class: 'form-control' %>
    </div>
  </div>
  <%= f.submit @project.new_record? ? 'Add' : 'Update', class: 'btn btn-outline-primary' %>
<% end %>
