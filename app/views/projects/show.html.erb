<div class="main">
  <h4><%= @project.project_number %></h4>
  <h6 class="mt-3 mb-4 text-muted"><%= @project.project_name %></h6>
  <div class="row">
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-0">Project Tools</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= link_to 'Instrument List', project_instruments_path(@project) %></li>
          <li class="list-group-item"><%= link_to 'Instrument Metrics', project_instruments_metrics_path(@project) %></li>
          <li class="list-group-item"><%= link_to 'Equipment List', project_equipment_path(@project) %></li>
          <li class="list-group-item"><%= link_to 'Equipment Metrics', project_equipment_metrics_path(@project) %></li>
          <li class="list-group-item"><%= link_to 'RFI Log', project_rfis_path(@project) %></li>
          <li class="list-group-item"><%= link_to 'Documentation Tracking', project_documents_path(@project) %></li>
        </ul>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Metrics</h5>
          <p class="card-text">Will show metrics summary</p>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Recent RFI's</h5>
          <p class="card-text">Will show recent RFI's</p>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Project Team</h5>
          <table class="w-100">
            <thead>
              <tr>
                <th scope="col">Role</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @project.team_members.each do |team_member| %>
                <%= render partial: 'team_member', locals: {team_member: team_member} %>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="card-body">
          <%= link_to 'Add Team Member', new_team_member_path(:project => @project), id: 'add_team_member', class: 'btn btn-outline-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5">
  <% if @project.user == current_user %>
    <%= link_to 'Update Project Details', edit_project_path(@project), class: 'btn btn-outline-primary btn-block', id: "update_project_#{@project.id}" %>
  <% end %>
</div>
