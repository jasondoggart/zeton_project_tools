<div class="row pl-5 pr-5 mb-3 mt-5">
  <div class="col-sm-12">
    <h3>
      Equipment
    </h3>
  </div>
</div>
<div class="row pl-5 pr-5">
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-info">
        <i class="fa fa-hashtag"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= @equipment.count %>
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        Total Equipment
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-warning">
        <i class="fa fa-check"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= equipment_po_placed_percent.to_f.nan? ? "0" : equipment_po_placed_percent.round(0) %>%
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        Purchased
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h3 text-success">
        <i class="fa fa-wrench"></i>
      </div>
      <div class="col-sm-12">
        <h2>
          <%= item_installed_by_mech_percent.to_f.nan? ? "0" : item_installed_by_mech_percent.round(0) %>%
        </h2>
      </div>
      <div class="col-sm-12 text-muted">
        Installed
      </div>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card card-box-shadow mb-3 pt-3 pb-3 text-center">
      <div class="col-sm-12 h1 text-info">
        <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_equipment_path, id: "new_equipment_link" %>
      </div>
    </div>
  </div>
</div>

<div class="row pl-5 pr-5">
  <div class="col-sm-12">
    <div class="card card-box-shadow mb-3">
      <div class="card-body mt-0">
        <div class="dropdown mt-3 mb-3">
          <button class="btn btn-outline-primary dropdown-toggle" type="button" id="loop_dropdown_button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort By
          </button>
          <div class="dropdown-menu" style="height: 200px; overflow: scroll;" aria-labelledby="loop_dropdown_button">
            <%= link_to 'Type', request.query_parameters.merge(:sorted_by => 'type_' + sort_direction(@sorted_by)), class: 'dropdown-item' %>
            <%= link_to 'Tag', request.query_parameters.merge(:sorted_by => 'tag_' + sort_direction(@sorted_by)), class: 'dropdown-item' %>
          </div>
        </div>
        <a class="btn btn-outline-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
          Filters<span class="ml-3"><i class="fa fa-caret-down"></i></span>
        </a>
        <%= link_to 'Download as Excel <i class="fa fa-download"></i>'.html_safe, project_equipment_excel_path(format: :xlsx), class: 'btn btn-outline-primary' %>
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <div class="row">
              <div class="col-4">
                <%= link_to 'Clear all', project_equipment_path(:sorted_by => 'type asc'), class: 'btn btn-outline-primary btn-sm' %>
              </div>
              <div class="col-4">
                <div class="dropdown">
                  <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="type_code_dropdown_button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Type
                    <% if params[:with_type].present? %>
                      <i class="fa fa-filter"></i>
                    <% end %>
                  </button>
                  <div class="dropdown-menu" style="height: 200px; overflow: scroll;" aria-labelledby="type_code_dropdown_button">
                    <%= link_to "Show All", project_equipment_path(:with_type => nil), class: 'dropdown-item' %>
                    <% @types.each do |type| %>
                      <%= link_to type, request.query_parameters.merge(:with_type => type), class: "dropdown-item" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row pl-5 pr-5">
  <div class="col-sm-12">
    <div class="card card-box-shadow mb-5">
      <div class="card-body mt-0">
        <% @equipment.each do |equip| %>
          <div class="border-bottom pb-3">
            <div class="pt-3 mt-0">
              <div class="row pl-3 pr-3">
                <div class="col-sm-12">
                  <h5 class="mb-0">
                    <%= link_to equip.tag, equipment_path(equip), id: "show_equipment_#{equip.id}" %>
                  </h5>
                  <span class="badge badge-pill badge-primary">
                    710-39-110
                  </span>
                  <span class="badge badge-pill badge-info">
                    <%= equip.scope %>
                  </span>
                </div>
              </div>
              <dl class="row pl-3 pr-3 pt-3">
                <dt class="col-sm-3">
                  Description
                </dt>
                <dd class="col-sm-9">
                  <%= equip.description %>
                </dd>
                <dt class="col-sm-3">
                  Type
                </dt>
                <dd class="col-sm-9">
                  <%= equip.equipment_type %>
                </dd>
                <dt class="col-sm-3">
                  Supplier
                </dt>
                <dd class="col-sm-9">
                  <%= equip.supplier %>
                </dd>
                <dt class="col-sm-3">
                  Manufacturer
                </dt>
                <dd class="col-sm-9">
                  <%= equip.manufacturer %>
                </dd>
                <dt class="col-sm-3">
                  Model
                </dt>
                <dd class="col-sm-9">
                  <%= equip.model_number %>
                </dd>
                <dt class="col-sm-3">
                  Zeton PO
                </dt>
                <dd class="col-sm-9">
                  <%= equip.zeton_po %>
                </dd>
              </dl>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row pl-5 pr-5">
        <%= will_paginate(@equipment, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
      </div>
    </div>
  </div>
</div>



