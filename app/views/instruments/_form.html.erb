<%= form_for @instrument do |f| %>
  <% if @instrument.errors.any? %>
    <div class="alert alert-warning">
      The form contains <%= pluralize(@instrument.errors.count, "error") %>
    </div>
    <ul>
      <% @instrument.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.hidden_field :project_id, value: @project.id %>

  <div class="form-group row">
    <%= f.label :type_code, 'Type', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :type_code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :loop, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :loop, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :zeton_skid_number, 'Skid Number', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zeton_skid_number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :zeton_skid_level, 'Skid level', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zeton_skid_level, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :scope, 'Zeton or Client Scope', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :scope, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :mech_elec, 'M, M/E, or E', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :mech_elec, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :supplier, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :supplier, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :manufacturer, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :manufacturer, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :model, 'Model Number', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :model, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :process_connection, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :process_connection, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :material_of_construction, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :material_of_construction, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :item_type, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :item_type, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :location, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :dcs_io_type, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :dcs_io_type, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :range, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :range, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :zeton_po, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :zeton_po, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :tracking_number, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :tracking_number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :receiving_info, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :receiving_info, class: 'form-control' %>
    </div>
  </div>
  <%= f.submit @instrument.new_record? ? 'Add Instrument' : 'Update Instrument', class: 'btn btn-outline-primary' %>
<% end %>
