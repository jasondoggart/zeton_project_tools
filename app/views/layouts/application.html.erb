<!DOCTYPE html>
<html>
  <head>
    <title>ZetonProjectTools</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navigation' %>
    <div id="flash">
      <% flash.each do |key, value| -%>
        <div class="alert alert-<%= key %>" id="flash_<%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div class="main-body">
      <%= yield %>
    </div>
    <% if signed_in? %>
      <div id="project_nav_bar" class="sidenav">
        <div class="border-bottom">
          <div class="pl-3 pt-3">
            <span class="h5 mb-0 pb-3">
              <%= current_user.full_name %>
            </span>
            <div class="pt-3 pb-3">
              <div class="row">
                <div class="col-12">
                  <%=
                    link_to 'Open Action Items',
                      user_path(current_user),
                      class: 'text-white'
                    %>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <%=
                    link_to 'Sign out',
                      sign_out_path,
                      method: :delete,
                      class: 'text-white'
                    %>
                </div>
              </div>
          </div>
        </div>
      </div>
      <% if current_project %>
        <div class="pt-4">
          <div class="pl-3 pr-3">
            <div class="row">
              <div class="col-12">
                <span class="h5">
                  <%= current_project.project_number %>
                </span>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%=
                  link_to 'Change',
                    root_path,
                    class: "text-white"
                  %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-12">
                <h6>
                  Bill of Materials
                </h6>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Equipment',
                  project_equipment_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Instruments',
                  project_instruments_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Handvalves',
                  project_handvalves_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-12">
                <h6>
                  Project Metrics
                </h6>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Summary',
                  project_metrics_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Equipment',
                  project_equipment_metrics_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Instruments',
                  project_instruments_metrics_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Handvalves',
                  project_handvalves_metrics_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-12">
                <h6>
                  Project Management
                </h6>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'RFI Log',
                  project_rfis_path,
                  class: 'text-white' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <%= link_to 'Action Items',
                  project_action_items_path,
                  class: 'text-white' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <script>
      function toggleNav() {
        var nav = document.getElementById("project_nav_bar");
        nav.classList.toggle("sidenav-open");
      }
    </script>
  </body>
</html>
