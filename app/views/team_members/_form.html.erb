<%= form_for @team_member do |f| %>
  <% if @team_member.errors.any? %>
    <h2><%= pluralize(@team_member.errors.count, 'error') %> prohibited the team member from being added</h2>
    <ul>
      <% @team_member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>



  <div class="form-group row">
    <%= f.label :user, 'Add Team Member', class: 'col-sm-2 col-form-label', id: 'add_team_member' %>
    <div class="col-sm-10">
      <%= f.collection_select :user_id, @users, :id, :email, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Add', class: 'btn btn-outline-primary' %>
<% end %>
